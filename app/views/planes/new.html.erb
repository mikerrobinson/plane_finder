<% provide(:title, "Add an airplane") %> 
<h1>Add an airplane profile</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for(@plane, :html => {:class => 'form-horizontal' }) do |f| %>
      <%= f.input :classification, :collection => [ "ASEL", "ASES", "AMEL", "AMES" ], :priority => "ASEL" %>
      <%= f.input :make %>
      <%= f.input :model %>
      <%= f.input :year, :collection => 1920..2012, :priority => 2009 %>
      <%= f.input :name %>
      <%= f.input :tags %>
      <%= f.input :tail_number %>
      <%= f.input :based_at %>
      <%= f.input :rental_amount %>
      <%= f.input :rental_type, :collection => [ "Dry", "Wet" ], :priority => "Wet" %>
      <%= f.input :notes %>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>