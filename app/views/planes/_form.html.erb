<%= simple_form_for(@plane) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tail_number %>
    <%= f.input :name %>
    <%= f.input :base_airport %>
    <%= f.input :rental_amount %>
    <%= f.input :rental_type %>
    <%= f.input :notes_text %>
    <%= f.input :image_url, disabled: true %>
    <%= f.input :make %>
    <%= f.input :model %>
    <%= f.input :year %>
    
    <% if current_user.admin %>
      <%= f.input :school, collection: School.all, label_method: :name %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
