<div class="row">
  <div class="span2">
    <div class="left-column">
      <img src="http://www.copterplane.net/wp-content/uploads/2012/03/Cessna-172.jpg" class="img-rounded">
    </div>
    <!-- <img src="http://static.rcgroups.com/forums/attachments/5/5/6/1/6/a3461279-204-2000_pic.jpg">     -->
  </div>
  <div class="span4">
    <div class="center-column">
      <p><h4><%= formatted_name(@plane) %></h4></p>
      <p><strong><%= @plane.code %> <%= @plane.tail_number %></strong></p>
      <p><%= @plane.notes_text %></p>
    </div>
  </div>
  <div class="span2">
    <div class="right-column pull-right">
      <p><h4><%= formatted_cost(@plane) %></h4></p>
      <div class="logo-placeholder">logo here</div>
      <!-- <img src="http://www.allianceflightschools.com/picts/logo2.png"> -->
    </div>
  </div>
</div>

