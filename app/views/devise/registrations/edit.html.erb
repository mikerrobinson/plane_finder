<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <legend>Account information</legend>
    <%= f.input :email, :required => false, :autofocus => true, :type => :email %>
    <%= f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes" %>
    
    <legend>Your details<br/><small>This information is optional - it is never shared, just used to improve your experience here<small></legend>
    <%= f.input :base_airport, :required => false %>

    <legend>Listing planes<br/><small>To list planes, we need just a bit more information<small></legend>
    <%= f.input :name %>
    <%= f.input :website %>
    <%= f.input :phone %>
    <%= f.input :image_url %>
    
  </div>
  
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

<%= link_to "Back", :back %>
