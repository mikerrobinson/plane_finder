<h1>Listing schools</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Website</th>
    <th>Image url</th>
    <th>Phone</th>
    <th>Email</th>
    <th>Base airport</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.name %></td>
    <td><%= school.website %></td>
    <td><%= school.image_url %></td>
    <td><%= school.phone %></td>
    <td><%= school.email %></td>
    <td><%= school.base_airport %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

