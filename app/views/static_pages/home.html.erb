<% provide(:title, 'Home') %>
<div class="center hero-unit">
  <h1>Welcome to the Plane Renter site</h1>

  <h2>
    This is your best resource for finding or listing planes for rent.
  </h2>

<%= form_tag '/search', :method => 'get' do  %>
  <p>
<%= label_tag "Find a plane in: " %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Search", :name => nil, class: "btn btn-large btn-primary" %>
</p>
<% end %>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), root_path %>